!!! Strict
%html
  %head
    %title
      = "#{yield_content(:page_title)} - Neil Middleton"
    %meta{:"http-equiv" => "content-type", :content => "text/html; charset=ut-8"}
    %meta{name: "author", content: "Neil Middleton"}
    = stylesheet_link_tag "application", :media => "all"
    %link{rel: "alternate", type: "application/rss+xml", title: "Neil Middleton", href: "http://feeds.feedburner.com/neil_middleton"}

    <script type="text/javascript" src="//use.typekit.net/sgb2rvd.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-54738-9']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    %section.header
      .container
        %section.name
          %a{href: "/"}
            %span#neil
              @neilmiddleton
        %section.meta
          %ul
            %li
              %a#articles{href: "/articles"} Articles
            %li
              %a#github{href: "https://github.com/neilmiddleton"} Github
            %li
              %a#twitter{href: "https://twitter.com/neilmiddleton"} Twitter
    .container
      = yield
      %footer
        neil {at} neilmiddleton {dot} com
